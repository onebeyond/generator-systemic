{
  "name": "generator-systemic",
  "version": "2.3.2",
  "description": "A generator for a systemic microservice",
  "homepage": "https://github.com/guidesmiths/generator-systemic",
  "author": {
    "name": "Guidesmiths Ltd",
    "email": "felipe.polo@gmail.com"
  },
  "scripts": {
    "test": "mocha --reporter spec './test/**/*.tests.js'",
    "lint": "eslint . --ext .js --config .eslintrc.json --ignore-path .eslintignore --cache",
    "lint:fix": "eslint --fix --ext .js .",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "dependency",
    "injection",
    "boot",
    "scaffold",
    "yeoman-generator"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "snyk": "^1.639.0",
    "yeoman-generator": "^4.13.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "mocha": "^6.2.3",
    "require-all": "^3.0.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.7.0"
  },
  "eslintConfig": {
    "extends": "imperative-es6",
    "env": {
      "mocha": true
    }
  },
  "repository": "GuideSmiths Ltd/generator-systemic",
  "license": "MIT",
  "snyk": true
}
